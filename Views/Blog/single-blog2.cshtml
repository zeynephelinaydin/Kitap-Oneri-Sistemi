@{
var comments = ViewBag.Comments as List<BlogComment>;
}

<div class="comments-area">
	<h4>Yorumlar</h4>

	@if (comments != null && comments.Any())
	{
	<h5>@comments.Count Yorum</h5>

	@foreach (var comment in comments)
	{
	<div class="comment-list">
		<div class="single-comment justify-content-between d-flex">
			<div class="user justify-content-between d-flex">
				<div class="desc">
					<h5>
						<a href="#">@comment.User?.Username</a>
					</h5>
					<p class="date">@comment.CreatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")</p>
					@if (!string.IsNullOrEmpty(comment.Subject))
					{
					<p class="subject"><strong>@comment.Subject</strong></p>
					}
					<p class="comment">@comment.Message</p>
				</div>
			</div>
			@if (User.Identity.IsAuthenticated && comment.UserId == int.Parse(User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier).Value))
			{
			<div class="reply-btn">
				<!-- Silme işlemi için form -->
				<form id="deleteForm-@comment.CommentId" method="post" asp-action="DeleteComment" asp-controller="Blog">
					<input type="hidden" name="commentId" value="@comment.CommentId"/>
					<input type="hidden" name="blogId" value="@ViewBag.BlogId"/>
					<button type="button" class="button button-postComment button--active" onclick="return confirmDelete(@comment.CommentId)">Sil</button>

				</form>
			</div>
			}
		</div>
	</div>
	}
	}
	else
	{
	<p>Henüz yorum yapılmamış. İlk yorumu siz yapın!</p>
	}
</div>
<div class="comment-form">
	<h4>Yorum Yaz</h4>

	@if (HttpContextAccessor.HttpContext.Session.GetString("UserId") == null)
	{
	<p>Yorum yazabilmek için lütfen
		<a href="/Login/Index?returnUrl=@Url.Action("Detail", "Blog", new { id = ViewBag.BlogId })">giriş yapın</a>.
	</p>

	}
	else
	{
	<form asp-action="AddComment" asp-controller="Blog" method="post">
		@Html.AntiForgeryToken()

		<input type="hidden" name="PageName" value="@ViewBag.PageName" />

		<div class="form-group">
			<input type="text" class="form-control" name="Subject" placeholder="Konu (Opsiyonel)" maxlength="200" />
		</div>

		<div class="form-group">
			<textarea class="form-control mb-10" rows="5" name="Message" placeholder="Yorumunuzu girin" required></textarea>
		</div>

		<button type="submit" class="button button-postComment button--active">Yorum Gönder</button>
	</form>
	}
</div>





