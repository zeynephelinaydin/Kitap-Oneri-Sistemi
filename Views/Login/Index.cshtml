                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="login_form_inner">
                    <h3>Kullanıcı Girişi</h3>
                    <form class="row login_form" asp-action="Index" asp-controller="Login" method="post">
                        <!-- returnUrl gizli input ekleyin -->
                        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

                        <div class="col-md-12 form-group">
                            <input type="text" class="form-control" id="email" name="Email" placeholder="Email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Kullanıcı Adı'">
                        </div>
                        <div class="col-md-12 form-group" style="position: relative;">
                            <input type="password" class="form-control" id="password" name="Password" placeholder="Şifre" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Şifre'">
                            <i class="fa fa-eye-slash toggle-password" aria-hidden="true" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); cursor: pointer;"></i>
                        </div>
                        <div class="col-md-12 form-group">
                            <button type="submit" value="submit" class="button button-login w-100">Giriş Yap</button>
                        </div>
                    </form>
                    @if (ViewBag.ErrorMessage != null)
                    {
                    <p style="color: red;">@ViewBag.ErrorMessage</p>
                    }

                    @if (ViewBag.SuccessMessage != null)
                    {
                    <p style="color: green;">@ViewBag.SuccessMessage</p>
                    }
                    <!-- Şifre Sıfırlama Modalı -->
                    <!-- İlk Modal: Email ve Güvenlik Sorusu Doğrulama -->
                    <div id="securityQuestionModal" style="display: none; position: fixed; top: 40%; left: 50%; transform: translate(-50%, -20%); background: white; padding: 20px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); z-index: 1000; border-radius: 8px; width: 400px;">
                        <h3>Şifre Yenileme - Güvenlik Doğrulama</h3>

                        <div id="securityErrorMessage" style="display:none; color: red; margin-bottom: 10px;"></div> <!-- Error Message -->

                        <form id="securityForm">
                            <div class="form-group">
                                <label for="securityEmail">E-Posta:</label>
                                <input type="email" id="securityEmail" name="email" class="form-control" required />
                            </div>

                            <div class="form-group" id="securityQuestionContainer" style="margin-top: 15px;">
                                <!-- Güvenlik sorusu burada dinamik olarak gösterilecek -->
                                <label for="securityQuestion">Güvenlik Sorusu:</label>
                                <p id="securityQuestionText" style="font-weight: bold;"></p>
                            </div>

                            <div class="form-group">
                                <label for="securityAnswer">Cevabınız:</label>
                                <input type="text" id="securityAnswer" name="securityAnswer" class="form-control" required />
                            </div>

                            <div style="margin-top: 15px; display: flex; justify-content: space-between;">
                                <button type="button" id="verifySecurityButton" class="button button-login">Doğrula</button>
                                <button type="button" onclick="closeSecurityModal()" class="button button-cancel">İptal</button>
                            </div>
                        </form>
                    </div>

                    <!-- İkinci Modal: Şifre Yenileme -->
                    <div id="resetPasswordModal" style="display: none; position: fixed; top: 40%; left: 50%; transform: translate(-50%, -20%); background: white; padding: 20px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); z-index: 1000; border-radius: 8px; width: 400px;">
                        <h3>Yeni Şifre Belirleme</h3>

                        <div id="resetPasswordErrorMessage" style="display:none; color: red; margin-bottom: 10px;"></div> <!-- Error Message -->

                        <form id="resetPasswordForm" asp-action="ResetPassword" asp-controller="Login" method="post">
                            <input type="hidden" id="resetEmail" name="email" />

                            <div class="form-group" style="position: relative;">
                                <label for="newPassword">Yeni Şifre:</label>
                                <div style="position: relative;">
                                    <input type="password" id="newPassword" name="newPassword" class="form-control" required
                                           style="padding-right: 30px;" />
                                    <i class="fa fa-eye-slash toggle-password" aria-hidden="true"
                                       style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); cursor: pointer;"></i>
                                </div>
                            </div>

                            <div class="form-group" style="position: relative;">
                                <label for="confirmPassword">Yeni Şifre Tekrarı:</label>
                                <div style="position: relative;">
                                    <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required
                                           style="padding-right: 30px;" />
                                    <i class="fa fa-eye-slash toggle-password" aria-hidden="true"
                                       style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); cursor: pointer;"></i>
                                </div>
                            </div>

                            <div style="margin-top: 15px; display: flex; justify-content: space-between;">
                                <button type="submit" class="button button-login">Şifreyi Güncelle</button>
                                <button type="button" onclick="closeResetModal()" class="button button-cancel">İptal</button>
                            </div>
                        </form>
                    </div>

                    <!-- "Şifremi Unuttum" butonu için Login sayfasına eklenecek HTML -->
                    <div style="text-align: center; margin-top: 10px;">
                        <a href="javascript:void(0);" onclick="openSecurityModal()" class="forgot-password-link">Şifremi Unuttum</a>
                    </div>

                    <script>
                        document.addEventListener('DOMContentLoaded', function() {
                            const togglePasswordIcons = document.querySelectorAll('.toggle-password');

                            togglePasswordIcons.forEach(icon => {
                                icon.addEventListener('click', function() {
                                    // Şifre inputu
                                    const input = this.previousElementSibling;

                                    // Şifre göster/gizle
                                    if (input.type === 'password') {
                                        input.type = 'text';
                                        this.classList.remove('fa-eye-slash');
                                        this.classList.add('fa-eye');
                                    } else {
                                        input.type = 'password';
                                        this.classList.remove('fa-eye');
                                        this.classList.add('fa-eye-slash');
                                    }
                                });
                            });
                        });

                        // Şifre doğrulama fonksiyonu
                        // Şifre doğrulama fonksiyonu
                        function validateResetPassword() {
                            var newPassword = document.getElementById("newPassword").value;
                            var confirmPassword = document.getElementById("confirmPassword").value;
                            var errorMessage = document.getElementById("resetPasswordErrorMessage"); // Error message div

                            // Şifre doğrulama kuralları (en az 8 karakter, bir küçük harf, bir büyük harf ve bir sayı içermeli)
                            var regex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d).{8,}$/;

                            // Hata mesajını temizle
                            errorMessage.style.display = 'none';
                            errorMessage.textContent = '';

                            // Şifre kurallara uyuyor mu kontrol et
                            if (!regex.test(newPassword)) {
                                errorMessage.style.display = 'block';
                                errorMessage.textContent = "Şifre en az 8 karakter, 1 büyük harf ve 1 rakam içermelidir.";
                                return false;
                            }

                            // Şifreler eşleşiyor mu kontrol et
                            if (newPassword !== confirmPassword) {
                                errorMessage.style.display = 'block';
                                errorMessage.textContent = "Şifreler eşleşmiyor.";
                                return false;
                            }

                            return true;
                        }

                        // Güvenlik sorusu doğrulama
                        document.getElementById('verifySecurityButton').addEventListener('click', function() {
                            var email = document.getElementById('securityEmail').value;
                            var answer = document.getElementById('securityAnswer').value;
                            var errorMessage = document.getElementById("securityErrorMessage"); // Error message div

                            // Hata mesajını temizle
                            errorMessage.style.display = 'none';
                            errorMessage.textContent = '';

                            if (!email || !answer) {
                                errorMessage.style.display = 'block';
                                errorMessage.textContent = 'Lütfen tüm alanları doldurun.';
                                return;
                            }

                            fetch('/Login/VerifySecurityAnswer', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json',
                                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                                },
                                body: JSON.stringify({
                                    email: email,
                                    securityAnswer: answer
                                })
                            })
                                .then(response => response.json())
                                .then(data => {
                                    if (data.success) {
                                        openResetModal(email);
                                    } else {
                                        errorMessage.style.display = 'block';
                                        errorMessage.textContent = 'Güvenlik sorusu cevabı hatalı.';
                                    }
                                })
                                .catch(error => {
                                    console.error('Hata:', error);
                                });
                        });

                        // Şifre resetleme formuna submit event listener ekle
                        document.getElementById("resetPasswordForm").addEventListener("submit", function(event) {
                            if (!validateResetPassword()) {
                                event.preventDefault(); // Formu gönderme işlemini durdur
                            }
                        });

                        function openSecurityModal() {
                            document.getElementById('securityQuestionModal').style.display = 'block';
                        }

                        function closeSecurityModal() {
                            document.getElementById('securityQuestionModal').style.display = 'none';
                        }

                        function openResetModal(email) {
                            document.getElementById('resetEmail').value = email;
                            document.getElementById('securityQuestionModal').style.display = 'none';
                            document.getElementById('resetPasswordModal').style.display = 'block';
                        }

                        function closeResetModal() {
                            document.getElementById('resetPasswordModal').style.display = 'none';
                        }

                        // E-posta girildiğinde güvenlik sorusunu getirme
                        document.getElementById('securityEmail').addEventListener('blur', function() {
                            var email = this.value;
                            if (email) {
                                fetch('/Login/GetSecurityQuestion?email=' + encodeURIComponent(email))
                                    .then(response => response.json())
                                    .then(data => {
                                        if (data.success) {
                                            document.getElementById('securityQuestionText').textContent = data.question;
                                            document.getElementById('securityQuestionContainer').style.display = 'block';
                                        } else {
                                            alert('Bu e-posta adresiyle kayıtlı kullanıcı bulunamadı.');
                                        }
                                    })
                                    .catch(error => {
                                        console.error('Hata:', error);
                                    });
                            }
                        });

                        // Güvenlik sorusu doğrulama
                        document.getElementById('verifySecurityButton').addEventListener('click', function() {
                            var email = document.getElementById('securityEmail').value;
                            var answer = document.getElementById('securityAnswer').value;

                            if (!email || !answer) {
                                alert('Lütfen tüm alanları doldurun.');
                                return;
                            }

                            fetch('/Login/VerifySecurityAnswer', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json',
                                    'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                                },
                                body: JSON.stringify({
                                    email: email,
                                    securityAnswer: answer
                                })
                            })
                                .then(response => response.json())
                                .then(data => {
                                    if (data.success) {
                                        openResetModal(email);
                                    } else {
                                        alert('Güvenlik sorusu cevabı hatalı.');
                                    }
                                })
                                .catch(error => {
                                    console.error('Hata:', error);
                                });
                        });

                    </script>
                </div>
            </div>
        </div>
    </div>
</section>
